<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Iffine Studio</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/wp-content/uploads/2022/12/favicon.png" />
</head>
<body>
    <div id="outer-wrapper">
        <header>
            <div class="header-wrapper">
                <div class="header-inner">
                    <div class="header-inner__trigger header-inner__trigger--nav">
                        <a href="#" id="menu-trigger">Menu</a>
                    </div>

                    <div class="header-inner__logo">
                        <a asp-controller="Home" asp-action="Index" target="_self">
                            <img src="~/wp-content/uploads/2024/01/logo.png" alt="Iffine Studio" />
                        </a>
                    </div>

                    <div class="header-inner__trigger header-inner__trigger--project">
                        <a asp-controller="Home" asp-action="Contact" id="project-trigger">Démarrer un projet</a>
                    </div>
                </div>
            </div>
        </header>

        <div id="slideout-menu" class="site-menu">
            <div class="menu-main-menu-container">
                <ul id="menu-main-menu" class="menu">
                    <li class="menu-item"><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                    <li class="menu-item"><a asp-controller="Home" asp-action="About">À propos</a></li>
                    <li class="menu-item"><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>

        <div id="content-wrapper">
            @RenderBody()
            <div style="clear:both;"></div>
        </div>

        <footer class="site-footer">
            <div class="bottom-content">
                <div class="bottom-container">
                    <div class="bottom-content__inner">
                        <div class="bottom-content__about">
                            <div class="bottom-content__about-us">
                                <h4>À propos</h4>
                                <p>Iffine Studio - Studio de création et design.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="site-credits">
                <div class="bottom-container">
                    <div class="site-credits__inner container">
                        <div class="site-credits__links">
                            <a asp-controller="Home" asp-action="Privacy">Politique de confidentialité</a>
                            <a asp-controller="Home" asp-action="Terms">Conditions d'utilisation</a>
                        </div>
                        <div class="site-credits__credits">
                            <span>Iffine Studio 2025</span>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
