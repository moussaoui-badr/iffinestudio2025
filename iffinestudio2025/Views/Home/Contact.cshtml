@{
    ViewData["Title"] = "Contact - Iffine Studio";
}

<section class="layout-section section-contact" style="background: rgb(232,226,212);">
    <div class="section-contact__inner">
        <div class="section-contact__wrapper">
            <div class="section-contact__content">
                <h2 style="text-align: center;">
                    Votre marque<br />
                    iconique vous attend.
                </h2>
                <p style="text-align: center;">
                    Prêt à démarrer votre projet ? Veuillez remplir notre formulaire de contact, 
                    et nous vous répondrons dans les 24 à 48 heures. Nous avons hâte de vous entendre !
                </p>
            </div>

            <div class="section-contact__form">
                <form method="post" asp-controller="Home" asp-action="SubmitContact" class="contact-form">
                    <div class="form-group">
                        <div class="form-row">
                            <input type="text" name="firstName" class="form-control" placeholder="Prénom*" required />
                            <input type="text" name="lastName" class="form-control" placeholder="Nom*" required />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="Adresse email*" required />
                    </div>
                    
                    <div class="form-group">
                        <input type="text" name="businessName" class="form-control" placeholder="Nom de l''entreprise" />
                    </div>
                    
                    <div class="form-group">
                        <input type="text" name="website" class="form-control" placeholder="Site web ou réseaux sociaux" />
                    </div>
                    
                    <div class="form-group">
                        <select name="discovery" class="form-control" required>
                            <option value="">Comment avez-vous découvert Iffine Studio ?*</option>
                            <option value="instagram">Instagram</option>
                            <option value="pinterest">Pinterest</option>
                            <option value="referral">Recommandation</option>
                            <option value="search">Moteur de recherche</option>
                            <option value="other">Autre</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <textarea name="challenge" class="form-control" rows="3" 
                                  placeholder="Quel est le principal défi auquel vous êtes confronté avec votre branding actuel ?"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <select name="projectType" class="form-control" required>
                            <option value="">Type de projet*</option>
                            <option value="new">Lancer une nouvelle entreprise</option>
                            <option value="rebrand">Rebranding d''une entreprise existante</option>
                            <option value="sister">Développer une marque soeur</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <textarea name="goals" class="form-control" rows="3" 
                                  placeholder="Quels résultats ou objectifs espérez-vous atteindre avec ce projet ?"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <textarea name="timeline" class="form-control" rows="2" 
                                  placeholder="Quel est votre calendrier idéal pour démarrer et terminer ce projet ?"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <textarea name="why" class="form-control" rows="3" 
                                  placeholder="Pourquoi souhaitez-vous travailler avec Iffine Studio ?*" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="button button--simple">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
